  CREATE OR REPLACE EDITIONABLE TRIGGER "SCOTT"."TRIGGER1" 
BEFORE INSERT ON LOAN_PRODUCT 
FOR EACH ROW

DECLARE
V_TITLE LOAN_PRODUCT.PROD_TITLE%TYPE;
X_TITLE LOAN_PRODUCT.PROD_TITLE%TYPE;
CTR integer :=1;
V_word NUMBER(2);

BEGIN
 V_TITLE := :NEW.PROD_TITLE;
 V_word := Length(V_TITLE) - LENGTH(REPLACE(V_TITLE,' ',''));
 
 for I in 1..V_word+1 Loop
   X_TITLE:=X_TITLE||SUBSTR(V_TITLE,INSTR(V_TITLE,' ',-1,V_word+CTR)+1,1);
   CTR:=CTR-1;
 END LOOP;  
  
 :NEW.PROD_ID := X_TITLE;

  
END;
/
